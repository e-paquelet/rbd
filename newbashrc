# ~/.bashrc: executed by bash(1) for non-login shells.
# If not running interactively, don't do anything
[ -z "$PS1" ] && return

# History settings
HISTCONTROL=ignoredups:ignorespace
shopt -s histappend
HISTSIZE=1000
HISTFILESIZE=2000
shopt -s checkwinsize

# Lesspipe (pour amÃ©liorer l'affichage de certains fichiers)
[ -x /usr/bin/lesspipe ] && eval "$(SHELL=/bin/sh lesspipe)"

# DÃ©tecter si on est en chroot
if [ -z "$debian_chroot" ] && [ -r /etc/debian_chroot ]; then
    debian_chroot=$(cat /etc/debian_chroot)
fi

# Activer les couleurs du prompt et du terminal
force_color_prompt=yes
if [ -n "$force_color_prompt" ]; then
    if [ -x /usr/bin/tput ] && tput setaf 1 >&/dev/null; then
        color_prompt=yes
    else
        color_prompt=
    fi
fi

# === ğŸ¨ Personnalisation du prompt (root en rouge) ===
if [ "$color_prompt" = yes ]; then
    PS1='${debian_chroot:+($debian_chroot)}\[\e[1;31m\]\u@\h\[\e[0m\]:\[\e[1;34m\]\w\[\e[0m\] \[\e[1;32m\]$(date +"%H:%M:%S")\[\e[0m\] \$ '
else
    PS1='${debian_chroot:+($debian_chroot)}\u@\h:\w\$ '
fi
unset color_prompt force_color_prompt

# Couleurs et alias
if [ -x /usr/bin/dircolors ]; then
    test -r ~/.dircolors && eval "$(dircolors -b ~/.dircolors)" || eval "$(dircolors -b)"
    alias ls='ls --color=auto'
    alias grep='grep --color=auto'
    alias fgrep='fgrep --color=auto'
    alias egrep='egrep --color=auto'
fi

# === ğŸ“‚ Aliases pratiques ===
alias ll='ls -alF'
alias la='ls -A'
alias l='ls -CF'
alias IP='ip --brief -c a'
alias APT='sudo apt update -y && sudo apt upgrade -y'
alias RAM='free -h'
alias DISK='df -hT'
alias TEMP='sensors'  # Affiche la tempÃ©rature du CPU (si lm-sensors installÃ©)
alias NETSTAT='ss -tulnp'
alias SPEED='speedtest-cli'  # Teste la connexion Internet (nÃ©cessite `speedtest-cli` installÃ©)
alias REBOOT='sudo reboot'
alias SHUTDOWN='sudo shutdown -h now'

# Charger les alias utilisateurs
if [ -f ~/.bash_aliases ]; then
    . ~/.bash_aliases
fi

# === ğŸ“œ Fonction du menu ===
function show_menu {
    while true; do
        echo -e "\e[32m=================================================================================\e[0m"
        echo -e "\e[32m===================== ğŸš€ Bienvenue dans le terminal personnalisÃ© =================\e[0m"
        echo -e "\e[32m=================================================================================\e[0m"
        echo -e "\e[34m 1) Afficher les adresses IP          \e[31m 2) Mettre Ã  jour le systÃ¨me \e[0m"
        echo -e "\e[35m 3) Afficher l'utilisation RAM        \e[36m 4) Afficher l'espace disque \e[0m"
        echo -e "\e[33m 5) Tester la connexion Internet      \e[32m 6) Quitter \e[0m"
        echo -e "\e[32m=================================================================================\e[0m"

        read -p "Votre choix : " choice 
        case $choice in 
            1) echo -e "\e[34mğŸ”¹ Adresse IP :\e[0m"; IP ;;
            2) echo -e "\e[31mğŸ”„ Mise Ã  jour du systÃ¨me...\e[0m"; APT ;;
            3) echo -e "\e[35mğŸ”¹ Utilisation de la RAM :\e[0m"; RAM ;;
            4) echo -e "\e[36mğŸ”¹ Espace disque :\e[0m"; DISK ;;
            5) echo -e "\e[33mğŸ”¹ Test de vitesse Internet :\e[0m"; SPEED ;;
            6) echo -e "\e[32mğŸšª Menu quittÃ©\e[0m"; break ;;
            *) echo -e "\e[31mâŒ Choix invalide\e[0m";;
        esac
    done
}

show_menu
alias HELP=show_menu
